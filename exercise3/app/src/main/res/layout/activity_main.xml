<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="Enter..."
        android:textColor="#000000"
        android:textSize="24sp"
        android:padding="8dp"
        android:background="#000000"
        android:backgroundTint="#FFFFFF"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:columnCount="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btclear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="C"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/btdiv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/btmul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="x"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/btsub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/btadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/btdec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>

        <Button
            android:id="@+id/btequal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="="
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"/>
    </GridLayout>

</RelativeLayout>